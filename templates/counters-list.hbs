{{#each counters as |item key|}}
<li class="custom-dnd5e-item" data-key="{{key}}">
    <i class="custom-dnd5e-drag flex0 fas fa-grip-lines" draggable="true"></i>
    <input id="visible" class="flex0" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.visible" type="checkbox" data-tooltip="{{localize "CUSTOM_DND5E.form.checkbox.visible.tooltip"}}"{{#unless (customDnd5eBoolFalse visible)}} checked{{/unless}}>
    <div class="fields flexrow">
        <input id="actorType" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.actorType" type="hidden" value="{{../actorType}}">
        <input id="key" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.key" type="hidden" value="{{key}}">
        <div class="field">
            <label>{{localize "CUSTOM_DND5E.label"}}</label>
            <input id="label" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.label" type="text" value="{{localize label}}">
        </div>
        <div class="field">
            <label>{{localize "CUSTOM_DND5E.type"}}</label>
            <select id="type" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.type">
                {{selectOptions ../selects.type.choices selected=type localize=true}}
            </select>
        </div>
    </div>
    <div class="custom-dnd5e-list-buttons">
        <button type="button" data-tooltip="{{localize "CUSTOM_DND5E.form.counters.triggers.tooltip"}}" data-action="advanced-options" data-tooltip="{{localize "CUSTOM_DND5E.form.counters.triggers.tooltip"}}" data-tooltip-direction="UP" class="flex0 custom-dnd5e-list-button">
        <i class="fa-solid fa-gear"></i>
        </button>
        <button type="button" data-tooltip="{{localize "CUSTOM_DND5E.form.counters.copyProperty.tooltip"}}" data-action="copy-property" data-tooltip="{{localize "CUSTOM_DND5E.form.counters.copyProperty.tooltip"}}" data-tooltip-direction="UP" class="flex0 custom-dnd5e-list-button">
            <i class="fa-solid fa-at"></i>
        </button>
        <button type="button" data-tooltip="{{localize "CUSTOM_DND5E.form.button.delete.tooltip"}}" data-action="delete" class="flex0 custom-dnd5e-list-button">
            <i class="fas fa-xmark"></i>
        </button>
        <input id="delete" name="{{#if ../actorType}}{{../actorType}}.{{/if}}{{key}}.delete" type="hidden" value="false">
    </div>
</li>
{{/each}}