<div class="custom-dnd5e-form-wrapper flexrow">
    <form class="custom-dnd5e-form flexcol">
        <div class="flexcol flexa scrollable">
            <div class="flex0">
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.key"}}</label>
                    <div class="form-fields">
                        <input id="key" name="{{key}}.key" type="text" value="{{key}}"> 
                    </div>
                    <p class="custom-dnd5e-advice notes">{{localize "CUSTOM_DND5E.form.counters.key.note.1"}}</p>
                </div>
                <div class="form-group flex0">
                    <label>{{localize "CUSTOM_DND5E.form.counters.viewRole.label"}}</label>
                    <div class="form-fields">
                        <select id="view-role" name="{{key}}.viewRole">
                            {{selectOptions selects.role.choices selected=viewRole localize=true}}
                        </select>
                    </div>
                    <p class="notes">{{localize "CUSTOM_DND5E.form.counters.viewRole.note.1"}}</p>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.form.counters.editRole.label"}}</label>
                    <div class="form-fields">
                        <select id="edit-role" name="{{key}}.editRole">
                            {{selectOptions selects.role.choices selected=editRole localize=true}}
                        </select>
                    </div>
                    <p class="notes">{{localize "CUSTOM_DND5E.form.counters.editRole.note.1"}}</p>
                </div>
                {{#unless (customDnd5eEq type "checkbox")}}
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.form.counters.max.label"}}</label>
                    <div class="form-fields">
                        <input id="max" name="{{key}}.max" type="number" value="{{max}}"> 
                    </div>
                    <p class="notes">{{localize "CUSTOM_DND5E.form.counters.max.note.1"}}</p>
                </div>
                {{/unless}}
            </div>
            <h2 class="flex0">{{localize "CUSTOM_DND5E.triggers"}}</h2>
            <div class="flexcol flexa scrollable">
                <ul class="custom-dnd5e-list">
                    {{> "modules/custom-dnd5e/templates/counters-triggers-list.hbs" prefix=triggers key=key type=type selects=selects}}
                </ul>
            </div>
        </div>
        <footer>
            <button type="button" data-action="new" class="new-button bright">
                <i class="fas fa-plus"></i>{{localize "CUSTOM_DND5E.form.button.new.label"}}
            </button>
            <button type="button" data-tooltip="{{localize "CUSTOM_DND5E.form.button.save.tooltip"}}" data-action="validate" class="save-button">
                <i class="fas fa-solid fa-floppy-disk"></i>{{localize "CUSTOM_DND5E.form.button.save.label"}}
            </button>
        </footer>
    </form>
</div>