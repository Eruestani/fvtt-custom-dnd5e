<ul class="custom-dnd5e-list">
    {{#each advancedOptions}}
        <li class="custom-dnd5e-item" data-key="{{randomId}}">
            <div class="custom-dnd5e-item-group flexrow">
                <i class="custom-dnd5e-drag flex0 fas fa-grip-lines" draggable="true"></i>
                <div class="flexcol">
                    <div class="form-group">
                        <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.trigger"}}</label>
                        <div class="form-fields">
                            <select id="trigger" name="trigger">
                                {{#select trigger}}
                                <option value="counterValue">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.counterValue"}}</option>
                                <option value="0p">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.0hp"}}</option>
                                <option value="0hpCombatEnd">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.0hpCombatEnd"}}</option>
                                <option value="halfHp">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.halfHp"}}</option>
                                <option value="roll1">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.roll1"}}</option>
                                <option value="roll20">{{localize "CUSTOM_DND5E.form.counters.advancedOptions.trigger.choices.roll20"}}</option>
                                {{/select}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group{{#unless (showTriggerValue trigger)}} hidden{{/unless}}">
                        <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.triggerValue"}}</label>
                        <div class="form-fields">
                            <input id="trigger-value" name="triggerValue" type="number" value="{{triggerValue}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.action"}}</label>
                        <div class="form-fields">
                            <select id="action" name="action">
                                {{#select action}}
                                {{#unless (eq ../type "checkbox")}}
                                <option value="increase">{{localize "CUSTOM_DND5E.increase"}}</option>
                                <option value="decrease">{{localize "CUSTOM_DND5E.decrease"}}</option>
                                <option value="dead">{{localize "CUSTOM_DND5E.dead"}}</option>
                                {{/unless}}
                                {{#if (eq ../type "checkbox")}}
                                <option value="check">{{localize "CUSTOM_DND5E.check"}}</option>
                                <option value="uncheck">{{localize "CUSTOM_DND5E.uncheck"}}</option>
                                {{/if}}
                                {{/select}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group{{#unless (showActionValue action)}} hidden{{/unless}}">
                        <label class="flex1" style="min-width:80px; max-width:100px;">{{localize "CUSTOM_DND5E.actionValue"}}</label>
                        <div class="form-fields">
                            <input id="action-value" name="actionValue" type="number" value="{{actionValue}}">
                        </div>
                    </div>
                </div>
                <button type="button" data-tooltip="{{localize "CUSTOM_DND5E.form.button.delete.tooltip"}}" data-action="delete" class="flex0 delete-button">
                    <i class="fas fa-xmark"></i>
                </button>
                <input id="delete" name="delete" type="hidden" value="false">
            </div>
        </li>
    {{/each}}
</ul>